{% extends 'base.html.twig' %}

{% block title %}{{pin.title}}{% endblock %}

{% block body %}

<h1>{{ pin.title }}</h1>
<p>{{ pin.description }}</p>
<a href="{{path('app_pin_edit', {id:pin.id})}}">Edit</a>
<a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-delete-pin-form').submit()">Delete</a>
<a href="{{path('app_home')}}">Back</a>

<form id="js-delete-pin-form" method="post" action="{{path('app_pin_delete', {id:pin.id})}}" style="display:none;">
<input type="hidden" name="_method" value="delete">
</form>

{% endblock %}